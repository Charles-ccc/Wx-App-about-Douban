.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.date {
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
}

.title {
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}

.avatar {
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}

.author {
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #666;
}

.tool {
    margin-top: 20rpx;
}

.circle-img {
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img image {
    width: 90rpx;
    height: 90rpx
}

.share-img {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    margin-left: 30rpx;
    border-radius: 50%; 
    border: none;
}

.horizon {
    width: 660rpx;
    height: 2rpx;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99
}

.const-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}

.detail {
    color: #666;
    margin-left: 20rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2rpx;
    font-size: 24rpx;
}

.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    margin-top: 20rpx;
}